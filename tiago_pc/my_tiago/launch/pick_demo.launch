<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="rviz"  default="false"/>
  <!-- marker detector -->
  <node pkg="tf" type="static_transform_publisher" name="place_offset" args="-0.16 0 0 0.707 -0.707 0 0 /aruco_frame /place_goal 10" />

  <!-- Load definition of pregrasp motion into play_motion namespace -->
  <rosparam command="load" file="$(find tiago_pick_demo)/config/pick_motions.yaml" /> 

  <!-- Pick & place server -->
  <node name="pick_and_place_server" pkg="my_tiago" type="pick_and_place_server.py" output="screen">
      <rosparam command="load" file="$(my_tiago)/config/pick_and_place_params.yaml" />
      <param name="object_width"  value="0.04" />
      <param name="object_height" value="0.25" />
      <param name="object_depth"  value="0.08" />
  </node>

  <!-- Node exposing service to start looking for the object and trigger the picking -->
  <node name="pick_client" pkg="tiago_pick_demo" type="moveit_simple_grasps_test.py" output="screen"/>  




</launch>
